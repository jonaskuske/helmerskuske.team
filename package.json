{
  "name": "helmerskuske.team",
  "version": "1.0.0",
  "description": "Landing page for Helmers & Kuske freelance web design",
  "main": "index.html",
  "scripts": {
    "start": "postcss styles.css -o assets/__styles.css -w",
    "build": "cross-env NODE_ENV=production postcss styles.css -o assets/__styles.css",
    "test": "echo \"No tests here, baby!\" && exit 0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged && npm run build && git add assets/__styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskuske/helmerskuske.team.git"
  },
  "authors": [
    {
      "name": "Jonas Kuske",
      "url": "https://github.com/jonaskuske"
    },
    {
      "name": "Rieke Helmers",
      "url": "https://github.com/riekehieke"
    }
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/jonaskuske/helmerskuske.team/issues"
  },
  "homepage": "https://helmerskuske.team",
  "dependencies": {
    "tailwindcss": "^1.1.4",
    "tailwindcss-interaction-variants": "^2.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.3",
    "cross-env": "^6.0.3",
    "cssnano": "^4.1.10",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "tabWidth": 2
  }
}
